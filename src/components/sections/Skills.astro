---
import Section from "../Section.astro";

import { skills } from "@cv"
---

<Section>
    <h2>Habilidades</h2>
    <ul>
        {
            skills.map(({ name }) => (
                <li>
                    <span>{name}</span>
                </li>
            ) )
        }
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        border-radius: 6px;
        color: #fff;
        background-color: #555;
        font-size: .8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }

</style>